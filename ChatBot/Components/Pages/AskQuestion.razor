    protected override void OnInitialized()
    {
        if (_chatSession.Model == null)
        {
            var modelPath = @"D:\Faks\DiplomskiRadV2\ChatBot\ChatBot\LLModels\Meta-Llama-3-8B-Instruct-Q4_K_M.gguf";
            var systemPrompt = $@"
                Facts: {{$facts}}
